<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Mnich</title>
        <link href="/css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    </head>
    <body>
        <%- include("common/searchbar", {categories, user, cart}) %>

        <main>
            <section id="cart">
                <div id="cart-items-container">
                    <% cart.items.forEach(item => { %>
                        <div class="cart-item-single">
                            <img src="<%= item.image ? item.image : '/assets/missing_cover.png' %>" alt="item">
                            <p><%= item.title %></p>
                            <div class="cart-item-quantity">
                                <button>+</button>
                                <input type="number" name="quantity" class="no-spin" min="1" value="<%= item.quantity %>">
                                <button>-</button>
                            </div>
                            <p><%= item.price %></p>
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </div>
                    <% }) %>
                </div>

                <div id="cart-summary">
                    <table>
                        <tr>
                            <td>Koszt produktów</td>
                            <td><%= productsPrice %>zł</td>
                        </tr>
                        <tr>
                            <td>Koszt dostawy</td>
                            <td>12zł</td>
                        </tr>
                        <tr>
                            <td>Rabat</td>
                            <td><%= discount %></td>
                        </tr>
                        <tr id="full-cost">
                            <td>Koszt całkowity</td>
                            <th><%= totalPrice %>zł</th>
                        </tr>
                    </table>
                    <button>Dostawa i Płatność</button>
                </div>
            </section> 
        </main>
    </body>
</html>
