<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Mnich</title>
        <link href="/css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    </head>
    <body>
        <%- include("common/searchbar", {categories, user, cart}) %>

        <main>
            <div id="filtered-search">
                <section id="filters">
                    <div class="filter-section categories">
                        <% if(typeof filters.selectedCategory.subcategories !== "undefined") { %>
                            <h2>Podkategorie <%= filters.selectedCategory.name %>:</h2>
                            <p>Powrót do <a href="..">Kategorii</a></p>
                            <ul>
                                <% filters.selectedCategory.subcategories.forEach(subcategory => { %>
                                    <li class="category"><%= subcategory.name %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <h2>Kategorie </h2>
                            <ul>
                                <% filters.selectedCategory.forEach(category => { %>
                                    <li class="category"><%= category.name %></li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>

                    <div class="filter-section state">
                        <h2>Stan:</h2>
                        <% filters.state.forEach(state => { %>
                            <span>
                                <input type="checkbox" name="state" id="state-<%= state.name %>" value="<%= state.name %>" <% if(state.checked) { %> checked <% } %>>
                                <label for="state-<%= state.name %>"><%= state.name %></label>
                            </span>
                        <% }) %>
                    </div>

                    <div class="filter-section price">
                        <h2>Cena:</h2>
                        <span>
                            <input type="number" name="min-price" id="min-price" placeholder="od" value="<%= filters.minPrice %>">
                            -
                            <input type="number" name="max-price" id="max-price" placeholder="do" value="<%= filters.maxPrice %>">
                        </span>
                    </div>

                    <div class="filter-section language">
                        <h2>Język:</h2>
                        <% filters.language.forEach(language => { %>
                            <span>
                                <input type="checkbox" name="state" id="state-<%= language.id %>" value="<%= language.id %>" <% if(language.checked) { %> checked <% } %>>
                                <label for="state-<%= language.id %>"><%= language.name %></label>
                            </span>
                        <% }) %>
                    </div>

                    <button id="filter-button" onClick="filterBooks()">Filtruj</button>
                </section>

                <section id="books">
                    <% books.forEach(book => { %>
                        <%- include("common/book", {book} ) %>
                    <% }) %>
                </section>
            </div>
        </main>
    </body>

    <script src="/scripts/bookScripts.js"></script>
    <script src="/scripts/searchScripts.js"></script>
</html>
